{
  "name": "@lzptec/job-system",
  "version": "0.1.0",
  "author": "LzpTec",
  "license": "MIT",
  "description": "A Job System for node",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "rimraf ./dist && pnpm run build",
    "test": "pnpm run prepare && ava test/test.js",
    "ts-types": "tsc --emitDeclarationOnly",
    "build": "pnpm run build:cjs & pnpm run ts-types",
    "build:cjs": "esbuild src/index.ts src/worker.ts --target=es2019 --bundle --sourcemap --platform=node --outdir=dist --format=cjs --out-extension:.js=.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "files": [
    "dist",
    "*.d.ts",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LzpTec/job-system.git"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@types/node": "12.0.0",
    "ava": "^3.15.0",
    "esbuild": "0.13.8",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1",
    "typed-emitter": "^1.4.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}